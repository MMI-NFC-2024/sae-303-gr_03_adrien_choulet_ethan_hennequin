---
// Composant Categories.astro
---
<section class="bg-white py-16 px-4">
  <div class="max-w-screen-xl mx-auto">
    <h2 class="text-3xl md:text-4xl font-bold text-center text-gray-900 mb-12">
      Quelques chiffres clés
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Carte 1 : Gares analysées -->
      <div class="bg-blue-50 rounded-lg shadow p-6 text-center">
        <div class="text-blue-600 mb-2">
          <svg class="mx-auto w-8 h-8" fill="none" stroke="currentColor" stroke-width="2"
            viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round"
              d="M12 11c0 1.657-1.343 3-3 3S6 12.657 6 11s1.343-3 3-3 3 1.343 3 3zM12 11v10m0-10c0-1.657 1.343-3 3-3s3 1.343 3 3-1.343 3-3 3-3-1.343-3-3z" />
          </svg>
        </div>
        <div class="text-3xl font-bold text-gray-900">142</div>
        <div class="text-sm text-gray-600 mt-1">Gares analysées</div>
      </div>

      <!-- Carte 2 : Festivals -->
      <div class="bg-purple-50 rounded-lg shadow p-6 text-center">
        <div class="text-purple-600 mb-2">
          <svg class="mx-auto w-8 h-8" fill="none" stroke="currentColor" stroke-width="2"
            viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round"
              d="M8 7V3m8 4V3M5 11h14M5 19h14M5 15h14" />
          </svg>
        </div>
        <div class="text-3xl font-bold text-gray-900">87</div>
        <div class="text-sm text-gray-600 mt-1">Festivals en BFC</div>
      </div>

      <!-- Carte 3 : Proximité culturelle -->
      <div class="bg-purple-50 rounded-lg shadow p-6 text-center">
        <div class="text-purple-600 mb-2">
          <svg class="mx-auto w-8 h-8" fill="none" stroke="currentColor" stroke-width="2"
            viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round"
              d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="text-3xl font-bold text-gray-900">66%</div>
        <div class="text-sm text-gray-600 mt-1">Gares proches de lieux culturels</div>
      </div>

      <!-- Carte 4 : Moyenne d'ouverture -->
      <div class="bg-purple-50 rounded-lg shadow p-6 text-center">
        <div class="text-purple-600 mb-2">
          <svg class="mx-auto w-8 h-8" fill="none" stroke="currentColor" stroke-width="2"
            viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round"
              d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="text-3xl font-bold text-gray-900">8.5h</div>
        <div class="text-sm text-gray-600 mt-1">Moyenne d'ouverture</div>
      </div>
    </div>
  </div>
</section>
